{
  "title": "Zotero RAG Observability",
  "tags": [
    "rag",
    "observability"
  ],
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "FastAPI Requests Rate",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (handler, method, status)",
          "refId": "A",
          "legendFormat": "{{method}} {{handler}} ({{status}})"
        }
      ],
      "datasource": "Prometheus"
    },
    {
      "type": "timeseries",
      "title": "Container CPU Usage",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\"core|gateway|chroma|ollama|webdav\"}[1m])) by (name)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{name=~\"core|gateway|chroma|ollama|webdav\"}) by (name)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      }
    },
    {
      "type": "logs",
      "title": "Application Logs",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 24,
        "h": 12
      },
      "targets": [
        {
          "expr": "{job=\"containerlogs\"} | json",
          "refId": "A"
        }
      ],
      "datasource": "Loki"
    },
    {
      "type": "timeseries",
      "title": "Chroma Document Count",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "chroma_document_count",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus"
    },
    {
      "type": "timeseries",
      "title": "Ollama Prompt Eval Rate",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(ollama_prompt_eval_count[1m])",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus"
    }
  ],
  "schemaVersion": 36,
  "version": 1
}